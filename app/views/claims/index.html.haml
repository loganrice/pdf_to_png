%div.container
  %div.panel.panel-primary
    %div.panel-heading
      %h3.panel-title
        Submit a Claim
    %div.panel-body
      =link_to "Add Claim", new_claim_path, class: "btn btn-success" 
    %table.table
      %tr
        %th
          First Name
        %th
          Last Name
        %th
          Claim Number

      -@claims.each do |claim|
        %tr
          %td
            =claim.client_first_name
          %td
            =claim.client_last_name
          %td
            =claim.client_claim_number
          %td
            =link_to "Delete", claim_path(claim), method: :delete, class: "btn btn-danger" 
          %td
            =link_to "Edit", edit_claim_path(claim), class: "btn btn-default"
